<div class="max-w-xl mx-auto mt-10 p-6 bg-white shadow rounded">
  <h2 class="text-2xl font-bold mb-4 text-gray-800">Book an Appointment</h2>

  <%= form_with url: public_book_appointment_path(@company.slug), method: :post, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :full_name, class: "block font-semibold mb-1" %>
      <%= f.text_field :full_name, class: "w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block font-semibold mb-1" %>
      <%= f.email_field :email, class: "w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :phone, class: "block font-semibold mb-1" %>
      <%= f.telephone_field :phone, class: "w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :appointment_date, "Preferred Date & Time", class: "block font-semibold mb-1" %>
      <%= f.datetime_select :appointment_date, class: "w-full p-2 border rounded" %>
    </div>

    <div class="mb-4">
      <%= f.label :reason, "Reason (optional)", class: "block font-semibold mb-1" %>
      <%= f.text_area :reason, rows: 3, class: "w-full p-2 border rounded" %>
    </div>

    <div>
      <%= f.submit "Submit Appointment", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
