<% content_for :title, "Add New Appointment" %>

<div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow">
  <h1 class="text-2xl font-semibold text-gray-800 mb-6">Add New Appointment</h1>

  <%= form_with(model: @appointment, url: appointments_path, local: true, html: { class: "space-y-6" }) do |form| %>
    <%# Display validation errors %>
    <% if @appointment.errors.any? %>
      <div id="error_explanation" class="bg-red-50 border-l-4 border-red-400 p-4 mb-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <%# Heroicon name: x-circle %>
            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800"><%= pluralize(@appointment.errors.count, "error") %> prohibited this appointment from being saved:</h3>
            <div class="mt-2 text-sm text-red-700">
              <ul role="list" class="list-disc pl-5 space-y-1">
                <% @appointment.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :full_name, "Customer Full Name", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= form.text_field :full_name, required: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= form.label :email, "Customer Email", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= form.email_field :email, required: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
        </div>
      </div>
    </div>

    <div>
      <%= form.label :phone, "Customer Phone Number", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.telephone_field :phone, required: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= form.label :appointment_date, "Appointment Date and Time", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.datetime_local_field :appointment_date, required: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
    </div>

     <div>
      <%= form.label :status, "Status (Optional - defaults to Approved)", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.select :status, options_for_select([['Approved', 'approved'], ['Pending', 'pending']], @appointment.status), { include_blank: 'Default (Approved)' }, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= form.label :reason, "Reason for Appointment (Optional)", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_area :reason, rows: 3, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
    </div>

    <div class="pt-5">
      <div class="flex justify-end">
        <%= link_to 'Cancel', appointments_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= form.submit "Create Appointment", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  <% end %>
</div> 